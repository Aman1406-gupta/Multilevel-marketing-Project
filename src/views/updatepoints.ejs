  <body>
    <%- include("../../../utils/header") %> <%-
    include("../../../utils/side"); %>
    <main id="main" class="main">
      <div class="pagetitle">
        <h1>UPDATE USER</h1>

        <div class="card">
          <div class="card-header">
            <form
              class="row g-3 needs-validation"
              novalidate
              action="/update_points_data?id=<%=searchdata.id%>"
              method="post"
            >
              <div class="col-md-4">
                <label for="validationCustom01" class="form-label"
                  >Points</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="validationCustom01"
                  value=""
                  name="points"
                  placeholder="Enter Points"
                />

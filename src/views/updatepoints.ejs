              </div>

              <div class="col-md-4">
                <label for="validationDefault04" class="form-label"
                  >Select Amount Type</label
                >
                <select
                  class="form-select"
                  id="validationDefault04"
                  name="type"
                  required
                >
                  <option value="credit" name="type">Credit</option>
                  <option value="debit" name="type">Debit</option>
                </select>
              </div>

              <div class="col-12">
                <button class="btn btn-primary" type="submit">
                  Submit form
                </button>
              </div>
            </form>
            <!-- End Custom Styled Validation -->
          </div>

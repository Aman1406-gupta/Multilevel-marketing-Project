<body>
  <%- include("../../../utils/header")%>
  
 
  <%- include("../../../utils/side")%>
  



  

  <main id="main" class="main">
   
    <div class="pagetitle">
      <h1>Data Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
          <li class="breadcrumb-item">Services</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          

                <div class="card">
                  <div class="card-header">
                <form class="row g-3 needs-validation" novalidate action="/filterservice" method="post">
                  <div class="col-md-4">
                    <label for="validationCustom01" class="form-label">Name</label>
                    <input type="text" class="form-control" id="validationCustom01" value="<%=searchdata?.filtername?searchdata?.filtername:""%>" name="filtername" placeholder="Search by Name">
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
                 
                  <div class="col-md-4">
                    <label for="validationCustom02" class="form-label">Price</label>
                    <input type="text" class="form-control" id="validationCustom02" value="<%=searchdata?.filterprice?searchdata?.filterprice:""%>" name="filterprice" placeholder="Search by Price">
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
    
                  <div class="col-md-4">
                    <label for="validationCustom02" class="form-label">Category</label>
                    <input type="text" class="form-control" id="validationCustom02" value="<%=searchdata?.filtercategory?searchdata?.filtercategory:""%>" name="filtercategory" placeholder="Search by Category">
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>

                  <div class="col-md-4">
                    <label for="validationCustom02" class="form-label">Duration</label>
                    <input type="text" class="form-control" id="validationCustom02" value="<%=searchdata?.filterduration?searchdata?.filterduration:""%>" name="filterduration" placeholder="Search by Duration">
                    <div class="valid-feedback">
                      Looks good!
                    </div>
                  </div>
                  <div class="col-12">
                    <button class="btn btn-primary" type="submit">Submit form</button>
                  </div>
                 
                </form><!-- End Custom Styled Validation -->
                </div></div>



          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>
               
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">S No.</th>
                    <th scope="col"> Service Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Duration</th>
                  </tr>
                </thead>
                
                <tbody>
                  <%let i=1; %>
                  <% for (let dataobj of service){
                   %>
                  <tr>
                    <th scope="row"><%=i%></th>
                    <td><%=dataobj.service_name%></td>
                    <td><%=dataobj.service_price%></td>
                    <td><%=dataobj.category%></td>
                    <td><%=dataobj.duration%></td>
                    <%id=dataobj._id.toString();%>
                    <td><form  action= "/update_service_page" method="post">
                      <input type="hidden" name="id" value="<%=id%>" />
                      <button type="submit"value="update">Update</button></td>
                    </form>
                  </tr>
                <%
                i=i+1;
              }%>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
       <%- include("../../../utils/flash")%> 
    </section>
    

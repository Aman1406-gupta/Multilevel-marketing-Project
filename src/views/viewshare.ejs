      <section class="section">
        <div class="row">
          <div class="col-lg-12">
            <div class="card" style="overflow-x: scroll">
              <div class="card-body">
                <h5 class="card-title">Datatables</h5>
                <!-- Table with stripped rows -->
                <table class="table datatable">
                  <thead>
                    <tr>
                      <th scope="col">S No.</th>
                      <th scope="col">UserId</th>
                      <th scope="col">Email</th>
                      
                     
                      <th scope="col">Share_Name</th>
                      <th scope="col">Status</th>
                      <th scope="col">Lots</th>
                      <th scope="col">Type</th>
                      <th scope="col">Transaction_Points</th>
                      <th scope="col">brokrage</th>
                      <th scope="col">Total_Amount</th>
                      <th scope="col">Date(mm/dd/yy)</th>
                    </tr>
                  </thead>

                  <tbody>
                    <div>
                      <%let i=1; %> <% for (let dataobj of data){ %>
                      <tr>
                        <%
                        // Assuming dateStr contains the date string "2023-12-03T17:41:46.536+00:00"
                        const dateStr = dataobj.createdAt;
                      
                        // Parse the date string into a Date object
                        const date = new Date(dateStr);
                      
                        // Format the date as "yy-mm-dd"
                        const formattedDate = date.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: '2-digit',
                          day: '2-digit',
                          hour:"2-digit",
                          minute:"2-digit",
                          second:"2-digit",
                        });
                      %>
                        <th scope="row"><%=i%></th>

                        <td><%=dataobj.Id%></td>
                        <td><%=dataobj.email%></td>
                       
                        <td><%=dataobj.stock_name%></td>
                        <td><%=dataobj.status%></td>
                        <td><%=dataobj.lots%></td>
                        <td><%=dataobj.type%></td>
                        <td><%=(dataobj.expected_amount).toFixed(2)%></td>
                        <td><%=dataobj.brokrage%></td>
                        <td><%= (Number(dataobj.brokrage) * Number(dataobj.expected_amount) * Number(dataobj.lots)).toFixed(2) %></td> <!--without lot size but add this later -->
                        <td><%=formattedDate%></td>
                        <%id=dataobj._id.toString();%>
                       
                       
                      </tr>
                      <% i=i+1; }%>
                    </div>
                  </tbody>
                </table>
                <!-- End Table with stripped rows -->
              </div>
            </div>
          </div>
        </div>
      </section>

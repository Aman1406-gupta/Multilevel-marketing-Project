      <div class="card">
        <div class="card-header">
          <form
            class="row g-3 needs-validation"
            novalidate
            action="/viewshare"
            method="get"
          >
            <div class="col-md-4">
              <label for="validationCustom01" class="form-label">Email</label>
              <input type="text" class="form-control" id="validationCustom01"
              value="<%=query.email?query.email:''%>"
              name="email" placeholder="Search by email">
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="col-md-4">
              <label for="validationCustom01" class="form-label">UserId</label>
              <input type="text" class="form-control" id="validationCustom01"
              value="<%=query.Id?query.Id:''%>"
              name="Id" placeholder="Search by UserId">
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="col-md-4">
              <label for="validationCustom01" class="form-label">Stock_Name</label>
              <input type="text" class="form-control" id="validationCustom01"
              value="<%=query.stock_name?query.stock_name:''%>"
              name="stock_name" placeholder="Search by Stock_Name">
              <div class="valid-feedback">Looks good!</div>
            </div>


            <div class="col-md-4">
              <label for="validationCustom02" class="form-label">Status</label>
              <select class="form-control" id="validationCustom02" name="status">
                <option value="" <%= query.status === '' ? 'selected' : '' %>>Select</option>
                <option value="pending" <%= query.status === 'pending' ? 'selected' : '' %>>Pending</option>
                <option value="completed" <%= query.status === 'completed' ? 'selected' : '' %>>Completed</option>
                <option value="cancelled" <%= query.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>             
              </select>
              
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="col-md-4">
              <label for="validationCustom02" class="form-label">Type</label>
              <select class="form-control" id="validationCustom02" name="type">
                <option value="" <%= query.type === '' ? 'selected' : '' %>>Select</option>
                <option value="buy" <%= query.type === 'buy' ? 'selected' : '' %>>Buy</option>
                <option value="sell" <%= query.type === 'sell' ? 'selected' : '' %>>Sell</option>
              </select>
              
              <div class="valid-feedback">Looks good!</div>
            </div>



            <div class="col-md-4">
              <label for="validationCustom02" class="form-label">StockType</label>
              <select class="form-control" id="validationCustom02" name="stock_type">
                <option value="" <%= query.stock_type === '' ? 'selected' : '' %> >MCX</option>
                <option value="NSE" <%= query.stock_type === 'NSE' ? 'selected' : '' %>>NSE</option>
              </select>
              
              <div class="valid-feedback">Looks good!</div>
            </div>







            <div class="col-md-4">
              <label for="validationCustom02" class="form-label">Lots</label>
              <input type="text" class="form-control" id="validationCustom02"
              value="<%=query.lots?query.lots:''%>"
              name="lots" placeholder="Search by lots">
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="col-md-4">
